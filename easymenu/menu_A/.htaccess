RewriteEngine On

# Rewrite requests to 'settings' to serve settings.json
RewriteRule ^settings$ settings.json [L]

# Rewrite requests to 'menuItems' to serve menuItems.json
RewriteRule ^menuItems$ menuItems.json [L]

# Rewrite url when request meet this condition
# - is not a file
# - is a directory
# - dont have index.html / index.php
# - dont redirect to it self
# - then: redirect all url to: /local2025/index.php
# - L - stop redirect process
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}/index.html !-f
RewriteCond %{REQUEST_FILENAME}/index.php !-f
RewriteRule ^(.*)$ /index.php [L]